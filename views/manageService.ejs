<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Receptionist</title>
    <style>
        /* Body Styling */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        /* Navigation Styling */
        nav {
            background-color: #ffffff;
            padding: 15px 40px;
            border-bottom: 1px solid #d8d8d8;
        }

        nav ul {
            list-style: none;
            padding: 0;
            margin: 0;
            display: flex;
            justify-content: flex-start;
            align-items: center;
        }

        nav ul li a {
            text-decoration: none;
            color: black;
            padding: 8px 16px;
            border-radius: 5px;
        }

        nav ul li a:hover {
            background-color: #007BFF;
            color: white;
        }

        /* Main Content Styling */
        .container {
            max-width: 1200px;
            margin: 30px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
            font-size: 2rem;
        }

        form {
            margin: 10px 0;
            display: inline-block;
        }

        button {
            background-color: #007BFF;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1rem;
        }

        button:hover {
            background-color: #0056b3;
        }

        /* Card Container Styling */
        .user-container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
        }

        .user-card {
            background-color: #ffffff;
            border: 1px solid #d8d8d8;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            flex: 1 1 calc(50% - 40px); /* 2 cards per row */
            max-width: calc(50% - 40px);
            box-sizing: border-box;
        }

        .user-card p {
            margin: 10px 0;
            font-size: 1rem;
        }

        .user-card form {
            margin-top: 10px;
        }

        .user-card button {
            width: 100%;
            margin-top: 5px;
        }

        .no-users {
            text-align: center;
            color: #888;
            font-size: 1.2rem;
        }

        /* Footer Styling */
        footer {
            background-color: #1d1d1d;
            color: #ffffff;
            padding: 40px 0;
        }

        .footer-container {
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
            gap: 40px;
            margin-bottom: 30px;
            padding-left: 70px;
            padding-right: 70px;
        }

        .footer-container div {
            flex: 1;
            min-width: 200px;
        }

        .footer-container div h4 {
            margin-bottom: 10px;
            font-size: 1.2rem;
        }

        .footer-container div p {
            font-size: 0.9rem;
            color: #d8d8d8;
            margin: 5px 0;
        }

        .social-links a {
            margin: 0 10px;
            color: #ffffff;
            text-decoration: none;
        }

        .social-links a:hover {
            color: #007BFF;
        }

        .footer-bottom {
            font-size: 0.8rem;
            color: #d8d8d8;
            margin-top: 20px;
            padding-left: 70px;
        }
    </style>
</head>
<body>

    <!-- Navigation -->
    <nav>
        <ul>
          <li><a href="/homeAdmin">Home</a></li>
          <li><a href="/manageRoom">Manage Room</a></li>
          <li><a href="/manageReceptionist">Manage Receptionist</a></li>
          <li><a href="/manageService">Manage Service</a></li>
          <li><a href="/report">Report</a></li>
          <li><a href="/logout">Logout</a></li>
          <li>About</li>
        </ul>
      </nav>

    <!-- Main Content -->
    <div class="container">
        <h1>Manage Services</h1>

        <form action="/addService" method="get">
            <button type="submit">Add Service</button>
        </form>
        <hr>

        <div class="user-container">
            <% if (serviceData.length > 0) { %>
                <% serviceData.forEach(service => { %>
                    <div class="user-card">
                        <p><strong>Name:</strong> <%= service.serviceName %></p>
                        <p><strong>Price:</strong> <%= service.servicePrice %></p>
                        <p><strong>Description:</strong> <%= service.serviceDescription %></p>
                        <form action="/editService/<%= service.id %>" method="get">
                            <button type="submit">Edit Service</button>
                        </form>
                        <form action="/deleteService/<%= service.id %>" method="post">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit">Delete Service</button>
                        </form>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="no-users">
                    <p>No services available currently</p>
                </div>
            <% } %>
        </div>
    </div>

    <!-- Footer -->
    <footer>
        <div class="footer-container">
            <div>
                <h4>Company</h4>
                <p>About Us</p>
                <p>Careers</p>
                <p>Privacy Policy</p>
                <p>Terms of Service</p>
            </div>
            <div>
                <h4>Services</h4>
                <p>Customer Support</p>
                <p>FAQ</p>
                <p>Receptionist Management</p>
                <p>Contact Us</p>
            </div>
            <div>
                <h4>Follow Us</h4>
                <div class="social-links">
                    <a href="#">Facebook</a>
                    <a href="#">Twitter</a>
                    <a href="#">Instagram</a>
                </div>
            </div>
            <div>
                <h4>Contact</h4>
                <p>Email: support@redwoodhotel.com</p>
                <p>Phone: +1 234 567 890</p>
                <p>Address: 123 Redwood St, City, Country</p>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; 2025 Redwood Hotel. All Rights Reserved.</p>
        </div>
    </footer>

</body>
</html>
